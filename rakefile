require_relative 'skanky_redis'
task :parallel do
  with_redis do |redis_connection_string|
    FileUtils.rm_rf('worker_log')
    FileUtils.mkdir_p 'worker_log'
    system("bundle exec parallel_cucumber --queue-connection-param #{redis_connection_string} -n 10 --log-dir 'worker_log' -o '-p lol'")
  end
end